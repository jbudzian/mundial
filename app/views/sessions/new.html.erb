<% provide(:title, "Sign in") %> <h1>Sign in</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
		<p>
			New user?
			<%= link_to signup_path, class: "btn btn-default" do %>
			    <i class="icon-user"></i> Sign up now!
			<% end %>
		</p>
		<p>
			Forgot password?
			<%= link_to new_reset_password_path, class: "btn btn-link" do %>
			    <i class="icon-exclamation-sign"></i> Reset password
			<% end %>
		</p>
	</div>
</div>